<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TCPAssignment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="w_reg_grey_black_12">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    <style name="edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/darkBlack2</item>
        <item name="android:textColorHint">@color/lightGray1</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:paddingStart">@dimen/_13sdp</item>
        <item name="android:paddingEnd">@dimen/_13sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="lineHeight">@dimen/_20sdp</item>
        <item name="android:background">@drawable/sh_edit_text_gray_with_border</item>
    </style>
    <style name="coach_title">
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/worksans_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
</resources>